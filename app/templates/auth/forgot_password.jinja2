{% extends 'base.jinja2' %}

{% block content %}
    <div class="container">
        <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0">
            <form class="form" method="POST" action="">
                {{ form.csrf_token() }}
                <h1>{% block title %} Восстановление пароля {% endblock %}</h1>

                <div class="form-floating mt-4">
                    {{ form.email(class="form-control", id="floatingInput", placeholder="username123") }}
                    {{ form.email.label(for="floatingInput") }}
                </div>

                {% for field, errors in form.errors.items() %}
                    <small class="form-text text-muted mt-1">
                        {{ ', '.join(errors) }}
                    </small>
                {% endfor %}
                {{ form.submit(class="mt-1 w-100 btn btn-lg btn-primary") }}
                <div class="mt-1">
                    {% with messages = get_flashed_messages(with_categories=true) %}
                        {% if messages %}
                            {% for category, message in messages %}
                                <div class="alert alert-{{ category }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endwith %}
                </div>
            </form>
        </div>
    </div>

{% endblock %}
