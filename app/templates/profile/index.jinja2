{% extends 'base.jinja2' %}

{% block content %}
    {% if user %}
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="d-flex">
                        <div class="img-thumbnail">
                            {% if user.has_additional_info %}
                                <img src="{{ user.additional_info['avatar_url'] }}">
                            {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="160" height="160" fill="currentColor"
                                     class="bi bi-image"
                                     viewBox="0 0 16 16">
                                    <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                    <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
                                </svg>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="accordion accordion-flush" id="accordionFlushExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#flush-collapseOne"
                                                aria-expanded="false" aria-controls="flush-collapseOne">
                                            Additional user info
                                        </button>
                                    </h2>
                                    <div id="flush-collapseOne" class="accordion-collapse collapse"
                                         data-bs-parent="#accordionFlushExample">
                                        <div class="accordion-body">
                                            <div class="accordion-item">
                                                <ul class="list-group list-group-flush">
                                                    {% if user.has_additional_info %}
                                                        {% for key, value in user.additional_info.items() %}
                                                            {% if value %}
                                                                <li class="list-group-item">{{ key }}: {{ value }}</li>
                                                            {% endif %}
                                                        {% endfor %}
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">User role: {{ user.role }}</li>
                                    <li class="list-group-item">User email: {{ user.email }}</li>
                                    <li id="username_field" class="list-group-item">User name: {{ user.login }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-2">
                        <div class="card-body">
                            <a class="btn btn-outline-primary" href="#" role="button">Сменить почту</a>
                            <span class="btn btn-outline-primary btn-file">Сменить аву<input type="file"></span>
                            <button id="change_login" class="btn btn-outline-primary"  role="button">Сменить логин</button>
                            <a class="btn btn-outline-warning" href="{{ url_for('auth.forgot_password') }}" role="button">Сбросить пароль</a>
                            <a class="btn btn-outline-danger" href="#" role="button">Удалить аккаунт</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}